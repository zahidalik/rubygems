- if current_user
  - if lesson.course.bought(current_user) || @course.user == current_user
    - if lesson.viewed(current_user)
      .text-success.fa.fa-check-square
    - else
      .text-danger.fa.fa-check-square
  - else
    .fa.fa-check-square
  = link_to course_lesson_path(@course, lesson) do
    /= lesson.row_order_rank + 1
    = lesson.title
- else
  .fa.fa-check-square
  = link_to course_lesson_path(@course, lesson) do
    /= lesson.row_order_rank + 1
    = lesson.title
.float-right
  .fa.fa-comment
  = lesson.comments_count
  - if policy(lesson).edit?
    .fa.fa-eye
    Impressions:
    = lesson.user_lessons.map(&:impressions).sum
    .fa.fa-user
    Users:
    = lesson.user_lessons.count
    = link_to 'Edit', edit_course_lesson_path(@course, lesson), class: 'btn btn-warning btn-sm'
    = link_to 'Destroy', [@course, lesson], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
