%li.list-group-item
  - if lesson.viewed(current_user)
    .text-success.far.fa-check-square
  - else
    .text-danger.far.fa-check-square
  = link_to lesson.title, course_lesson_path(@course, lesson)
  .float-right
    - if policy(lesson).edit?
      = link_to 'Edit', edit_course_lesson_path(@course, lesson), class: 'btn btn-warning btn-sm'
      = link_to 'Destroy', [@course, lesson], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
