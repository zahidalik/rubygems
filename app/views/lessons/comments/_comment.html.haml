.card
  .card-header
    = comment.created_at.strftime('%d-%m-%Y %H:%M')
    = "(#{time_ago_in_words(comment.created_at)})"
    by
    = link_to comment.user, user_path(comment.user)
    - if policy(comment).destroy?
      = link_to [@course, @lesson, comment], method: :delete, data: { confirm: "Are you sure"}, class: 'btn btn-danger btn-sm' do
        .fa.fa-trash
  .card-body
    = comment.content
